{% extends 'layout.html.twig' %}

{% block title %}Author index{% endblock %}

{% block content %}
    <h1>Author index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.firstName }}</td>
                <td>{{ author.name }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('author_show', {'id': author.id}) }}">show</a>
                    <a class="btn btn-danger" href="{{ path('author_edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('author_new') }}">Create new</a>
{% endblock %}
