{% extends 'layout.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block content %}
    <h1 class="mt-3">Liste des Editeurs</h1>
    <div class="row mb-2 mt-2">
        <div class="col text-right">
            <a href="{{ path('app_publisher_createpublisher') }}" class="btn btn-danger">
                Nouveau Editeur
            </a>
        </div>
    </div>

    <table class="table table-bordered table-danger table-striped text-center">

        <thead>
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Editeur</th>
            <th scope="col">Email</th>
            <th scope="col">Website</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for publisher in publisherList %}
        <tr>
            <th scope="row">{{ publisher.id }}</th>
            <td>
                {{ publisher.name }}
            </td>
            <td>
                {{ publisher.email }}
            </td>
            <td>
                {{ publisher.website }}
            </td>
            <td>
                <a type="button" class="btn btn-danger" href="{{ path('publisher-delete', {'id':publisher.id}) }}">Supprimer</a>
            </td>
        </tr>
        </tbody>
        {% endfor %}
    </table>
{% endblock %}
