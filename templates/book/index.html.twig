{% extends 'layout.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block content %}


            <table class="table table-bordered table-danger table-striped text-center">

                    <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Auteur</th>
                        <th scope="col">Prix</th>
                        <th scope="col">action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for book in bookList %}
                    <tr>
                        <th scope="row">{{ book.id }}</th>
                        <td>
                            {{ book.title }}
                        </td>
                        <td>
                            {{ book.author }}
                        </td>
                        <td>
                            {{ book.price }}
                        </td>
                        <td>
                            <a type="button" class="btn btn-danger" href="{{ path('book-delete', {'id':book.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>

{% endblock %}
